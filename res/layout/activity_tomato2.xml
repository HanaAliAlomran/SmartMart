<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ScheduleActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/smartmart_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tomato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="384dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Market Name"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Description"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Availability"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Price"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Panda" />

                <TextView
                    android:padding="8dp"
                    android:text="An egyptian tomato" />



                <TextView
                    android:padding="8dp"
                    android:text="Available" />

                <TextView
                    android:padding="8dp"
                    android:text="2 SAR" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Altamimi" />
                <TextView
                    android:padding="8dp"
                    android:text="An african tomato" />


                <TextView
                    android:padding="8dp"
                    android:text="Available" />



                <TextView
                    android:padding="8dp"
                    android:text="3 SAR" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Lulu Market" />

                <TextView
                    android:padding="8dp"
                    android:text="An egyptian tomato" />


                <TextView
                    android:padding="8dp"
                    android:text="Not available" />

                <TextView
                    android:padding="8dp"
                    android:text="0.5  SAR" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Aldanoub" />
                <TextView
                    android:padding="8dp"
                    android:text="An egyptian tomato" />

                <TextView
                    android:padding="8dp"
                    android:text="Not available" />



                <TextView
                    android:padding="8dp"
                    android:text="4 SAR" />
            </TableRow>

        </TableLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372"/>


</androidx.constraintlayout.widget.ConstraintLayout>